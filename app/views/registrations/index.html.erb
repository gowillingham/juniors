<h1>Listing registrations</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Parent first name</th>
    <th>Parent last name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Tshirt size</th>
    <th>Parent tshirt size</th>
    <th>School</th>
    <th>Grade</th>
    <th>Note</th>
    <th>Waiver</th>
    <th>Parent helper</th>
    <th>Volleyball</th>
    <th>Product</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @registrations.each do |registration| %>
  <tr>
    <td><%= registration.first_name %></td>
    <td><%= registration.last_name %></td>
    <td><%= registration.parent_first_name %></td>
    <td><%= registration.parent_last_name %></td>
    <td><%= registration.email %></td>
    <td><%= registration.phone %></td>
    <td><%= registration.address %></td>
    <td><%= registration.city %></td>
    <td><%= registration.state %></td>
    <td><%= registration.zip %></td>
    <td><%= registration.tshirt_size %></td>
    <td><%= registration.parent_tshirt_size %></td>
    <td><%= registration.school %></td>
    <td><%= registration.grade %></td>
    <td><%= registration.note %></td>
    <td><%= registration.waiver %></td>
    <td><%= registration.parent_helper %></td>
    <td><%= registration.volleyball %></td>
    <td><%= registration.product_id %></td>
    <td><%= link_to 'Show', registration %></td>
    <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
    <td><%= link_to 'Destroy', registration, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

