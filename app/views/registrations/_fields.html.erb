<div class="control-group">
  <%= f.label :product_id, requirify('Which session?'), :class => 'control-label' %>
  <div class="controls">
    <%= f.select :product_id, Product.find(:all, :conditions => ['category =?', 'inhouse']).map { |p| [p.name, p.id] }, { :prompt => '' }, :class => 'input-auto' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :first_name, requirify('Player first name'), :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :first_name %>
  </div>
</div>

