<!DOCTYPE html>
<html>
<head>
	<!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <title><%= APP_SHORT_NAME %> Volleyball</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body class="<%= "#{controller.controller_name} #{controller.action_name}" %>">

	<nav class="navbar navbar-inverse navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">
	      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </a>
	      <%= link_to APP_SHORT_NAME, root_path, :class => :brand %>
	      <div class="nav-collapse">
	        <ul class="nav">
	          <li><%= link_to "Home", root_path, :class => :home %></li>
 	          <li><%= link_to "Calendar", calendar_path, :class => :calendar %></li>     
	          <li><%= link_to "About", about_path, :class => :about %></li>
	          <li><%= link_to "Privacy", privacy_path, :class => :privacy %></li>
	          <li><%= link_to "Staff", staff_path, :class => :staff %></li>
	          <li><%= link_to "Contact us", contact_path, :class => :contact %></li>
	          <li>
	          	<% if logged_in? %>
			          <%= link_to "Sign out", session_path(current_user), :method => :delete, :class => :signin %>
			        <% else %>
			          <%= link_to "Sign in", signin_path, :class => :signin %>
			      	<% end %>
	         	</li>
	        </ul>
	      </div>
	    </div>
	  </div>
	</nav>

	<div class="container">
    <div class="row">
      <div class="span9"><%= yield %></div>

      <div class="span3">
				<% if logged_in? %>  	
	      	<ul class="nav nav-tabs nav-stacked">
	      		<li><%= link_to 'Users', users_path, :class => '' %></li>
	      		<li><%= link_to 'Products', products_path, :class => '' %></li>
	      		<li><%= link_to 'Registrations', registrations_path, :class => '' %></li>
	      		<li><%= link_to 'Payments', payments_path, :class => '' %></li>
	      	</ul>
      	<% end %>

      	<h3>Register for ..</h3>
      	<ul class="nav nav-tabs nav-stacked">
      		<li><%= link_to "In-house Volleyball League", new_registration_path %></li>
      		<li><%= link_to 'JO Traveling tryouts (USAV)', JO_TRYOUT_FORM_URL, :target => '_blank' %></li>
      		<li><%= link_to '12-And-Under Skill sessions', SKILL_SESSION_FORM_URL, :target => '_blank' %></li>
      	</ul>

        <h3>Links</h3>
        <ul class="nav nav-tabs nav-stacked">
        	<li><%= link_to 'Lakeville Cougars', "http://southvolleyball.ihigh.com/", :target => '_blank' %></li>
        	<li><%= link_to 'North Country region (USAV)', "http://www.ncrusav.org/", :target => '_blank' %></li>
        	<li><%= link_to 'USA Volleyball', "http://www.teamusa.org/USA-Volleyball.aspx/", :target => '_blank' %></li>
        	<li><%= link_to 'Lakeville Panthers', "http://www.ihigh.com/lakevillenorthvolleyball/", :target => '_blank' %></li>
        	<li><%= link_to 'Lakeville North Juniors', "http://www.lakevillenorthjuniors.com/", :target => '_blank' %></li>
        </ul>

