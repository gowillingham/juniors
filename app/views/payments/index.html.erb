<h1>Listing payments</h1>

<table>
  <tr>
    <th>Registrations</th>
    <th>Amount</th>
    <th>Online</th>
    <th>Scholarship</th>
    <th>Paypal txn</th>
    <th>Paypal txn type</th>
    <th>Paypal mc fee</th>
    <th>Paypal sandbox</th>
    <th>Paypal payment status</th>
    <th>Paypal pending status reason</th>
    <th>Paypal payment type</th>
    <th>Paypal verify sign</th>
    <th>Paypal payer status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.registrations_id %></td>
    <td><%= payment.amount %></td>
    <td><%= payment.online %></td>
    <td><%= payment.scholarship %></td>
    <td><%= payment.paypal_txn_id %></td>
    <td><%= payment.paypal_txn_type %></td>
    <td><%= payment.paypal_mc_fee %></td>
    <td><%= payment.paypal_sandbox %></td>
    <td><%= payment.paypal_payment_status %></td>
    <td><%= payment.paypal_pending_status_reason %></td>
    <td><%= payment.paypal_payment_type %></td>
    <td><%= payment.paypal_verify_sign %></td>
    <td><%= payment.paypal_payer_status %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

